{% extends 'base.html.twig' %}

{% block slider %}
    <div class="kode-inner-banner">
        <div class="kode-page-heading">
            <h2>Change your password</h2>
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li><a href="#">Account</a></li>
                <li class="active">Change-password</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="container clearfix">
    <div class="postcontent nobottommargin clearfix" style="width: 100%;">
        {{ form_start(form, { 'action': path('nucleos_user_change_password'), 'attr': { 'class': 'nucleos_user_change_password' } }) }}
        {{ form_errors(form) }}

        <div class="form-group">
            <label for="nom_carte">Current password</label>
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control select-1 ', 'id': 'nom_carte', 'placeholder': '' }}) }}
        </div>
        <div class="form-group">
            <label for="nom_carte">New password</label>
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control select-1 ', 'id': 'nom_carte', 'placeholder': '' }}) }}
        </div>
        <div class="form-group">
            <label for="nom_carte">Confirm password</label>
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control select-1 ', 'id': 'nom_carte', 'placeholder': '' }}) }}
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
